<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="model.Disc" table="Disc">
        <meta attribute="class-description">
            This class contains the employee detail. 
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>      
        <property name="name" column="name" type="string"/>
        <property name="directorName" column="directorName" type="string"/>
        <property name="actorName" column="actorName" type="string"/>
        <property name="stock" column="stock" type="string"/>
        <property name="price" column="price" type="int"/>
        <many-to-one name="category" class="model.Category" lazy ="false" fetch="select" >
            <column name="categoryId" not-null="false"/>
        </many-to-one>
        <many-to-one name="language" class="model.Language" lazy ="false" fetch="select" >
            <column name="languageId" not-null="false"/>
        </many-to-one>          
        <set name="cart" table="Cart" inverse="true" lazy ="false" fetch="select">
            <key>
                <column name="discId" not-null="true"/>
            </key>
            <one-to-many class="model.Cart"/>
        </set>                 
    </class>
</hibernate-mapping>