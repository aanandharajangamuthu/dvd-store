<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="com.i2i.model.Cart" table="Cart">
        <meta attribute="class-description">
            This class contains the cart detail. 
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>       
        <property name="quantity" column="quantity" type="int"/>
        <property name="totalPrice" column="totalPrice" type="double"/>
        <many-to-one name="purchaseOrder" class="com.i2i.model.PurchaseOrder" lazy ="false" fetch="select" >
            <column name="purchaseOrderId" not-null="false"/>
        </many-to-one>
        <many-to-one name="disc" class="com.i2i.model.Disc" lazy ="false" fetch="select" >
            <column name="discId" not-null="false"/>
        </many-to-one>                           
    </class>
</hibernate-mapping>