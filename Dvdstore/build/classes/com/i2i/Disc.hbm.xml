<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.i2i.model.Disc" table="Disc">
        <meta attribute="class-description">
            This class contains the Disc detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>     
        <property name="name" column="name" type="string"/>
        <property name="directorName" column="directorName" type="string"/>
        <property name="actorName" column="actorName" type="string"/>
        <property name="imageUrl" column="imageUrl" type="string"/>
        <property name="stock" column="stock" type="int"/>
        <property name="price" column="price" type="int"/>
        <many-to-one name="category" class="com.i2i.model.Category" lazy ="false" fetch="select" >
            <column name="categoryId" not-null="false"/>
        </many-to-one>
        <many-to-one name="language" class="com.i2i.model.Language" lazy ="false" fetch="select" >
            <column name="languageId" not-null="false"/>
        </many-to-one>         
        <set name="cart" table="Cart" inverse="true" lazy ="false" fetch="select">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many class="com.i2i.model.Cart"/>
        </set>                
    </class>
</hibernate-mapping>