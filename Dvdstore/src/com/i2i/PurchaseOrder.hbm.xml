<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="com.i2i.model.PurchaseOrder" table="PurchaseOrder">
        <meta attribute="class-description">
            This class contains the PurchaseOrder detail. 
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>        
        <property name="payment" column="payment" type="string"/>
        <property name="status" column="status" type="string"/>
        <many-to-one name="user" class="com.i2i.model.User" lazy ="false" fetch="select" >
            <column name="userId" not-null="false"/>
        </many-to-one>          
        <set name="cart" table="Cart" inverse="true" lazy ="false" fetch="select">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many class="com.i2i.model.Cart"/>
        </set>                                       
    </class>
</hibernate-mapping>