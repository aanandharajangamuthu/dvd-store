<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="model.PurchaseOrder" table="PurchaseOrder">
      <meta attribute="class-description">
         This class contains the PurchaseOrder detail. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="increment"/>
      </id>
      <property name="payment" column="payment" type="string"/>
      <property name="status" column="status" type="string"/>
      <many-to-one name="user" class="model.User" lazy="false" fetch="select">
      <column name="userId" not-null="false"/>
      </many-to-one>
   </class> 
</hibernate-mapping>
   