<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="com.i2i.model.User" table="User">
        <meta attribute="class-description">
            This class contains the User detail. 
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>      
        <property name="name" column="name" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="password" column="password" type="string"/>
        <property name="mobileNumber" column="mobileNum" type="string"/>
        <set name="purchaseOrders" table="PurchaseOrder" inverse="true" lazy ="false" fetch="select">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many class="com.i2i.model.PurchaseOrder"/>
        </set>         
    </class>
</hibernate-mapping>